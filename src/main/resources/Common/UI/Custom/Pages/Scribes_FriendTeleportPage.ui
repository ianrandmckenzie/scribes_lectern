Group {
    Anchor: (Left: 0, Top: 0, Right: 0, Bottom: 0);
    LayoutMode: Center;

    Group {
        Background: (TexturePath: "scribe_scrollbg.png");
        Anchor: (Width: 500, Height: 400);

        Group #Title {
            Anchor: (Left: 0, Right: 0, Top: 0, Height: 60, Vertical: 50);
            Label {
                Text: "Request to Teleport";
                Anchor: (Left: 20, Top: 15, Bottom: 0);
                Style: (HorizontalAlignment: Center, TextColor: #000000);
            }
        }

        Group #Content {
            Anchor: (Top: 90, Left: 0, Right: 0, Bottom: 100);

            Group #PlayerList {
                LayoutMode: TopScrolling;
                FlexWeight: 1;
                Padding: (Left: 10, Right: 10, Top: 10);

                Group #PlayerCards {
                    LayoutMode: Top;
                }
            }
        }

        Group #Footer {
            Anchor: (Left: 0, Right: 0, Bottom: 0, Height: 100);
            Padding: (Left: 10, Right: 10, Top: 5, Bottom: 5);
            LayoutMode: Center;

            Button #CancelButton {
                Anchor: (Width: 120, Height: 40, Vertical: 10);

                Label {
                    Text: "Cancel";
                    Anchor: (Vertical: 0);
                    Style: (HorizontalAlignment: Center, TextColor: #000000);
                }
            }
        }
    }
}
